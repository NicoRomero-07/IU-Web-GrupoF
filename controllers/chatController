const db = require('../database/db_connection');
const pool = db.pool;
const mysql = db.mysql;

exports.getMensajes = async(req,res) =>{
    const id = req.session.idUsuario;
    const idReceptor = req.params.usuarioId;
    selectQuery = 'SELECT u.nombre, mp.* FROM usuario u JOIN mensaje_privado mp ON u.idUsuario = mp.emisor WHERE (mp.emisor = ? AND mp.receptor = ?) OR (mp.emisor = ? AND mp.receptor = ?) ORDER BY mp.fechaEmision';
    query = mysql.format(selectQuery,[id, idReceptor, idReceptor, id]);
    pool.query(query, async(error, data)=>{
        if(error){
            console.log(error);
        } else {
            res.render("chatView", {
                mensajes:data,
                usuario:req.session.idUsuario
            });
        }
    })
}