<!doctype html>
<html lang="en">
  <head>
    <%- include('../views/partials/head'); %>
  </head>
 
  <!-- Container -->
  <body class="container-fluid min-vh-100 d-flex flex-column justify-content-between">
    <header class="row">
      <%- include('../views/partials/navbar'); %>
    <!-- BreadCrumb -->
          <nav class = "row col-12 px-3 py-2 m-0"  style=" background-color: #0d6efd;" aria-label="breadcrumb">
              <ol class="breadcrumb"> 
                <li class="breadcrumb-item ps-1 text-light"><a class = "text-light" href="../index">Pagina inicial</a></li>
                <li class="breadcrumb-item ps-1 text-light" href="index">Crear Foro</li>
              </ol>
          </nav>

    </header>
    <!-- Main -->
  <main class="row">

    <!-- Crear Foro -->
    <article class="container col-12 p-3 mx-0">
      <h2 class="text-center" id="labelCrearForo"> Crear foro </h2>
      
      <form class="text-center col-12" method="POST" action="/crearForo" accept-charset="UTF-8" id="formCrearForo">
        <input type="hidden" name="idUsuario" id="idUsuario" value="<%= usuario %>"/>
        <div class="col-12">
          <label for="nombreForo" class="form-label">Nombre foro</label>
          <div class="input-group has-validation w-25 mx-auto">
            <input type="text" class="form-control" id="nombreForo" name="nombreForo" required>
            <div class="invalid-feedback">
              Nombre de foro requerido
            </div>
          </div>
        </div>

        <div class="col-12">
          <label for="descripcion" class="form-label">Descripci√≥n</label>
          <div class="input-group has-validation w-25 mx-auto">
            <textarea class ="form-control" name="descripcion" id="descripcion"></textarea>
            <div class="invalid-feedback">
              Descripcion requerida.
            </div>
          </div>
        </div>

        <label for="categoria" class="form-label">Categoria</label><br>
        <select name="categoria" id="categoria" style="background-color: #fff;">
          <% categorias.forEach((categoria)=>{ %>
              <option id="<%= categoria.idCategoria %>" name ="<%= categoria.nombre %>" value="<%= categoria.idCategoria%>"><%= categoria.nombre %></option>
          <% })  %>
        </select><br>

         <!-- Button trigger modal -->
        <button type="submit" class="w-50 btn btn-md btn-success mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">Crear</button>
        <button class="w-50 btn btn-secondary btn-md mt-3"><a class="text-white" href="../index" style="text-decoration: none;">Cancelar</a></button>
      </form>

    </article>
    
  </main>

    
    <!-- Pie de pagina-->
    
  <footer class="row">
    <%- include('../views/partials/footer'); %> 
  </footer>
    
    <script src="../node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Informacion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          El foro ha sido creado correctamente
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <button type="button" class="btn btn-primary">Ir al foro</button>
        </div>
      </div>
    </div>
  </div>

</html>


