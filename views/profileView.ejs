        <a class="navbar-brand" href="index">
          <img alt="Brand" width="35" height="35"
          src="img/bocaillo.png">
        </a>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
          <ul class="navbar-nav me-auto ms-2 mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="#">Categorias</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Trending</a>
            </li>
          </ul>
          <section class="row col-12 mx-0 col-lg-6 justify-content-end align-items-center">
            <!--Perfil-->
            <div class="dropdown ms-3 col-4">
              <a href="#" class="d-flex align-items-center link-light text-decoration-none dropdown-toggle fs-5" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle"></i>
                <!--<img src="" alt="" width="32" height="32" class="rounded-circle me-2">-->
                <strong class="text-light">&ensp;Username</strong>
              </a>
              <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                <li><a class="dropdown-item" href="#">Perfil</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#">Cerrar sesion</a></li>
              </ul>
            </div>
          </section>
        </div>
      </nav>

    </main>

    <!-- BreadCrumb -->
    <nav class="row p-1" style="background-color:#0d6efd;">
      <ol class="breadcrumb my-2">
        <li class="breadcrumb-item"><a href="index" class="text-light">Pagina Inicial</a></li>
        <li class="breadcrumb-item text-light" aria-current="page">Perfil</a></li>
      </ol>
    </nav>

    <main class="row">
      <!-- Informacion de perfil -->
      <div class="container col-10 p-3 mx-auto">
        <div class="row">
            <div class="col-5 text-center">
              <img width="200" height="200" src="img/profilepicture.png">
              <h3 class="">Usuario</h3>
              <button class="w-40 btn btn-md btn-primary" type="submit"> <a href="editProfile.html" class="nav-link text-white">Editar perfil</a> </button>
            </div>
            <div class="col-7">
              <style>
                #section {
                    background-color: rgb(225, 225, 225);
                    border-radius: 25px;
                }
              </style>
              <section id="section">
                <p class="pt-4 px-3">
                  <label for="usuario">Usuario: <%=usuarioLogin.nombre%></label>
                </p>
                <p class="px-3">
                    <label for="email">Email: <%=usuarioLogin.email%> </label>
                </p>
                <p class="pb-4 px-3">
                    <label for="password">Contraseña: <%=usuarioLogin.contrasenya%></label>
                </p>  
              </section>
              <button class="w-40 btn btn-md btn-secondary" type="submit"> <a href="login.html" class="nav-link text-white">Cerrar Sesión</a> </button>
              <button class="w-40 btn btn-md btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteAccount" type="submit" > <label class="nav-link text-danger" id="deleteaccountbtn">Borrar Cuenta</label> </button>
            </div>
        </div>
      </div>
    </section>
  </main>

    <!-- Pie de pagina-->
    <div class="row mt-auto ">
      <footer class="py-4 d-flex" style="background-color: #202124;">
        <!-- d-flex fixed-bottom flex-wrap justify-content-between align-items-center py-3 border-top -->
        <a
          class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
        </a>

        <ul class="nav col-md-4 justify-content-end">
          <li class="nav-item"><a href="#" class="nav-link px-2 text-light">Acerca de nosotros <i class="bi bi-people-fill"></i></a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 text-light">Ayuda <i class="bi bi-patch-question"></i></a></li>
          <li class="p-2 text-light">© 2022, bocaillo.com</li>
        </ul>
      </footer>
    </div>

    <script src="../node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="../js/deleteAccount.js"></script>
  </body>
  
  <!-- Modal -->
  <div class="modal fade" id="deleteAccount" tabindex="-1" aria-labelledby="deleteAccountLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteAccountLabel">Información</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ¿Seguro que quieres borrar tu cuenta?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <button type="button" class="btn btn-danger">Borrar Cuenta</button>
        </div>
      </div>
    </div>
  </div>
</html>