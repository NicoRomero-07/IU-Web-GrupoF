<!doctype html>
<html lang="en">
  <head>
    <%- include('../views/partials/head'); %>
  </head>
  <!-- Container -->

  <body class="container-fluid d-flex flex-column  min-vh-100">
    <main class="row">

      <!--Navbar-->
      <%- include('../views/partials/navbar'); %>

    </main>

    <!-- BreadCrumb -->
    <nav class="row p-1" style="background-color:#0d6efd;">
      <ol class="breadcrumb my-2">
        <li class="breadcrumb-item"><a href="index" class="text-light">Pagina Inicial</a></li>
        <li class="breadcrumb-item text-light" aria-current="page">Perfil</a></li>
      </ol>
    </nav>

    <main class="row">
      <!-- Informacion de perfil -->
      <div class="container col-10 p-3 mx-auto">
        <div class="row">
            <div class="col-5 text-center">
              <img width="200" height="200" src="../img/profilepicture.png">
              <h3 class=""><%=nombreUsuario%></h3>
              <button class="w-40 btn btn-md btn-primary" type="submit"> <a href="editProfile.ejs" class="nav-link text-white">Editar perfil</a> </button>
            </div>
            <div class="col-7">
              <style>
                #section {
                    background-color: rgb(225, 225, 225);
                    border-radius: 25px;
                }
              </style>
              <section id="section">
                <p class="pt-4 px-3">
                  <label for="usuario">Usuario: <%=usuario[0].nombre%></label>
                </p>
                <p class="pb-4 px-3">
                    <label for="email">Email: <%=usuario[0].email%> </label>
                </p> 
              </section>
              <button class="w-40 btn btn-md btn-secondary" type="submit"> <a href="/" class="nav-link text-white">Cerrar Sesión</a> </button>
              <button class="w-40 btn btn-md btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteAccount" type="submit" > <label class="nav-link text-danger" id="deleteaccountbtn">Borrar Cuenta</label> </button>
            </div>
        </div>
      </div>
    </section>
  </main>

    <!-- Pie de pagina-->
    <%- include('../views/partials/footer'); %> 

    <script src="../node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="../js/deleteAccount.js"></script>
  </body>
  
  <!-- Modal -->
  <div class="modal fade" id="deleteAccount" tabindex="-1" aria-labelledby="deleteAccountLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteAccountLabel">Información</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ¿Seguro que quieres borrar tu cuenta?
        </div>
        <div class="modal-footer">
          <!--
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <form action="../borrarCuenta">
            <input type = "hidden" id="idUsuario" name="idUsuario" value=""></input>
            <button type="submit" class="btn btn-danger">Borrar Cuenta</button>
          </form>
          -->
        </div>
      </div>
    </div>
  </div>
</html>